<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Class Schedule - Your Gym Name</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <style>
      /* Additional custom styles can go here */
    </style>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <!-- Logo and navigation links on the left -->
          <div class="flex space-x-7 items-center">
            <!-- Website Logo -->
            <a href="#" class="flex items-center py-4 px-2">
              <span class="font-semibold text-gray-500 text-lg">Your Gym</span>
            </a>
            <!-- Primary Navbar items -->
            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center space-x-1">
              <a
                href="/"
                class="py-4 px-2 text-green-500 border-b-4 border-green-500 font-semibold"
                >Home</a
              >
              <a
                href="/classes"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Classes</a
              >
              <a
                href="/services"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Services</a
              >
              <a
                href="/about"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >About</a
              >
              <a
                href="/contact"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Contact</a
              >
            </div>
          </div>

          <!-- Profile icon and authentication links on the right -->
          <div class="flex items-center space-x-3">
            <!-- Profile Icon -->
            <a
              href="/profile"
              class="flex items-center py-2 px-2 text-gray-500 hover:text-green-500 transition duration-300"
            >
              <svg
                class="h-6 w-6 fill-current"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 132.69 124.91"
              >
                <path
                  d="M132.15,124.41H.54c2.13-27.09,30.78-48.55,65.81-48.55s63.67,21.46,65.8,48.55Z"
                />
                <circle cx="64.17" cy="34.56" r="34.06" />
              </svg>
            </a>
            <!-- Login & Sign Up -->
            <a
              href="/login"
              class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-green-500 hover:text-white transition duration-300"
              >Log In</a
            >
            <a
              href="/register"
              class="py-2 px-2 font-medium text-white bg-green-500 rounded hover:bg-green-400 transition duration-300"
              >Sign Up</a
            >
          </div>
        </div>
      </div>
    </nav>

<!-- Instructors Section -->
    <section class="py-12">
        <div class="container mx-auto px-5">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">Our Instructors</h2>
            <div class="flex flex-wrap -mx-4">
                <% instructors.forEach(function(instructor) { %>
                    <div class="p-4 lg:w-1/4 md:w-1/2">
                        <div class="bg-white rounded-lg shadow-xl p-6">
                            <img alt="instructor" src="https://via.placeholder.com/150" class="rounded-full w-32 h-32 object-cover mx-auto mb-4"/>
                            <h3 class="text-lg font-semibold text-gray-900"><%= instructor.username %></h3>
                            <p class="text-gray-500"><%= instructor.specialty %></p>
                            <div class="mt-4">
                                <p class="text-sm text-gray-600 mb-2"><%= instructor.bio %></p>
                                <!-- Star Ratings -->
                                <div class="flex justify-center">
                                    <span class="text-yellow-400">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Feedback Section -->
    <section class="py-12 bg-gray-200">
        <div class="container mx-auto px-5">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-6">Give Feedback</h2>
            <form action="/feedback" method="POST" class="max-w-lg mx-auto">
                <div class="mb-4">
                    <label for="instructor" class="block text-gray-700 text-sm font-bold mb-2">Select Instructor:</label>
                    <select name="instructorId" id="instructor" class="block w-full bg-white border border-gray-300 rounded py-2 px-4 leading-tight focus:outline-none focus:border-green-500">
                        <% instructors.forEach(function(instructor) { %>
                            <option value="<%= instructor.id %>"><%= instructor.username %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-4">
                    <label for="comment" class="block text-gray-700 text-sm font-bold mb-2">Your Feedback:</label>
                    <textarea id="comment" name="comment" class="block w-full bg-white border border-gray-300 rounded py-2 px-4 leading-tight focus:outline-none focus:border-green-500" rows="4"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Submit Feedback</button>
                </div>
            </form>
        </div>
    </section>

    <!-- Become an Instructor Section -->
    <div class="text-center mt-10">
      <a
        href="/becomeinstructor"
        class="text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-lg"
        >Become an Instructor</a
      >
    </div>

    <!-- Include your footer here -->
  </body>
</html>
