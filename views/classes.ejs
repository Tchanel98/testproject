<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Classes</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
      .card {
        background-color: #ffffff;
        border-radius: 0.5rem;
        padding: 2rem;
        margin: 1rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      }
      .btn {
        background-color: #34d399; /* Tailwind's teal-400 */
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: background-color 0.3s;
      }
      .btn:hover {
        background-color: #059669; /* Tailwind's teal-600 */
      }
      @media (min-width: 1024px) {
        .card {
          max-width: calc(25% - 2rem);
        }
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-100 text-gray-800">
    <header>
<!-- Navbar -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <!-- Logo and navigation links on the left -->
          <div class="flex space-x-7 items-center">
            <!-- Website Logo -->
            <a href="#" class="flex items-center py-4 px-2">
              <span class="font-semibold text-gray-500 text-lg">Your Gym</span>
            </a>
            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center space-x-1">
              <a
                href="/"
                class="py-4 px-2 text-green-500 border-b-4 border-green-500 font-semibold"
                >Home</a
              >
              <a
                href="/classes"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Classes</a
              >
              <a
                href="/services"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Services</a
              >
              <a
                href="/about"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >About</a
              >
              <a
                href="/contact"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Contact</a
              >
            </div>
          </div>

          <!-- Profile icon and authentication links on the right -->
          <div class="flex items-center space-x-3">
            <!-- Profile Icon -->
            <a
              href="/profile"
              class="flex items-center py-2 px-2 text-gray-500 hover:text-green-500 transition duration-300"
            >
              <svg
                class="h-6 w-6 fill-current"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 132.69 124.91"
              >
                <path
                  d="M132.15,124.41H.54c2.13-27.09,30.78-48.55,65.81-48.55s63.67,21.46,65.8,48.55Z"
                />
                <circle cx="64.17" cy="34.56" r="34.06" />
              </svg>
            </a>
            <!-- Login & Sign Up -->
            <a
              href="/login"
              class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-green-500 hover:text-white transition duration-300"
              >Log In</a
            >
            <a
              href="/register"
              class="py-2 px-2 font-medium text-white bg-green-500 rounded hover:bg-green-400 transition duration-300"
              >Sign Up</a
            >
          </div>
        </div>
      </div>
    </nav>

    </header>

    <main class="container mx-auto px-4 py-6">
      <div class="flex justify-between items-center mb-6">
        <p class="text-lg text-gray-700">userId: <%= userId %></p>
        <!-- Other header content if needed -->
      </div>

      <div class="flex flex-wrap -m-1 justify-center">
        <% classes.forEach(function(course) { %>
        <div class="card">
          <h2 class="text-2xl font-bold text-gray-900"><%= course.title %></h2>
          <p class="text-gray-700">Instructor: <%= course.instructor_name %></p>
          <p class="text-gray-600 mb-4">Description: <%= course.description %></p>
          <!-- More details here -->
          <button
            class="btn"
            onclick="bookClass('<%= course.id %>', '<%= course.title %>', '<%= userId %>')"
          >
            Book Class
          </button>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Sticky Footer -->
    <footer class="mt-auto bg-white shadow-lg">
      <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <p class="text-gray-600">Â© 2023 Your Gym Name</p>
          <div>
            <a href="#" class="text-gray-500 mx-3">Privacy Policy</a>
            <a href="#" class="text-gray-500 mx-3">Terms of Service</a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // JavaScript function for booking a class
      function bookClass(courseId, courseName, userId) {
        let test = `/bookclass?classId=${courseId}&userId=${userId}&className=${encodeURIComponent(courseName)}`

        console.log(test)

        window.location.href = `/bookclass?classId=${courseId}&userId=${userId}&className=${encodeURIComponent(courseName)}`;

      }
    </script>
  </body>
</html>
