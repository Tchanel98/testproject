<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Become an Instructor</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Navigation Bar Here -->
   <!-- Navbar -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <!-- Logo and navigation links on the left -->
          <div class="flex space-x-7 items-center">
            <!-- Website Logo -->
            <a href="#" class="flex items-center py-4 px-2">
              <span class="font-semibold text-gray-500 text-lg">Your Gym</span>
            </a>
            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center space-x-1">
              <a
                href="/"
                class="py-4 px-2 text-green-500 border-b-4 border-green-500 font-semibold"
                >Home</a
              >
              <a
                href="/classes"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Classes</a
              >
              <a
                href="/services"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Services</a
              >
              <a
                href="/about"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >About</a
              >
              <a
                href="/contact"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300"
                >Contact</a
              >
            </div>
          </div>

          <!-- Profile icon and authentication links on the right -->
          <div class="flex items-center space-x-3">
            <!-- Profile Icon -->
            <a
              href="/profile"
              class="flex items-center py-2 px-2 text-gray-500 hover:text-green-500 transition duration-300"
            >
              <svg
                class="h-6 w-6 fill-current"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 132.69 124.91"
              >
                <path
                  d="M132.15,124.41H.54c2.13-27.09,30.78-48.55,65.81-48.55s63.67,21.46,65.8,48.55Z"
                />
                <circle cx="64.17" cy="34.56" r="34.06" />
              </svg>
            </a>
            <!-- Login & Sign Up -->
            <a
              href="/login"
              class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-green-500 hover:text-white transition duration-300"
              >Log In</a
            >
            <a
              href="/register"
              class="py-2 px-2 font-medium text-white bg-green-500 rounded hover:bg-green-400 transition duration-300"
              >Sign Up</a
            >
          </div>
        </div>
      </div>
    </nav>
    <!-- Become an Instructor Form -->
    <section class="text-gray-600 body-font relative">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-col text-center w-full mb-12">
                <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Become an Instructor</h1>
                <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Share your expertise and join our teaching community.</p>
            </div>
            <div class="lg:w-1/2 md:w-2/3 mx-auto">
                <form action="/becomeinstructor" method="post" class="flex flex-wrap -m-2" enctype="multipart/form-data">
                    <!-- Bio -->
                    <div class="p-2 w-full">
                        <label for="bio" class="leading-7 text-sm text-gray-600">Bio</label>
                        <textarea id="bio" name="bio" class="w-full bg-gray-100 rounded border border-gray-300 focus:border-green-500 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
                    </div>
                    <!-- Specialty -->
                    <div class="p-2 w-full">
                        <label for="specialty" class="leading-7 text-sm text-gray-600">Specialty</label>
                        <input type="text" id="specialty" name="specialty" class="w-full bg-gray-100 rounded border border-gray-300 focus:border-green-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <!-- Qualifications -->
                    <div class="p-2 w-full">
                        <label for="qualifications" class="leading-7 text-sm text-gray-600">Qualifications</label>
                        <input type="text" id="qualifications" name="qualifications" class="w-full bg-gray-100 rounded border border-gray-300 focus:border-green-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <!-- Experience -->
                    <div class="p-2 w-full">
                        <label for="experience" class="leading-7 text-sm text-gray-600">Years of Experience</label>
                        <input type="number" id="experience" name="experience" min="0" class="w-full bg-gray-100 rounded border border-gray-300 focus:border-green-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <!-- Upload Certifications -->
                    <div class="p-2 w-full">
                        <label for="certifications" class="leading-7 text-sm text-gray-600">Upload Certifications</label>
                        <input type="file" id="certifications" name="certifications" class="w-full bg-gray-100 rounded border border-gray-300 focus:border-green-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <!-- Submit Button -->
                    <div class="p-2 w-full">
                        <button type="submit" class="flex mx-auto text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-lg">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Footer Here -->
</body>
</html>
